{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "tailwindCSS.experimental.classRegex": [
      [ "cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]" ], // cva
      [ "[classNames|classnames]\\(([^)]*)\\)", "\\{([^}]*)\\}*", "[\"'`]([^\"'`]*).*?[\"'`]" ], // classNames
      "(?:enter|leave)(?:From|To)?=\\s*(?:\"|'|{`)([^(?:\"|'|`})]*)" // Headless UI
  ]
}